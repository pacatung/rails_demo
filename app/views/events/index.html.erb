<h1>Event List</h1>

<!-- 使用gem kaminari -->
<%= paginate @events %>

<ul>
<% @events.each do |event| %>
  <li>
  <%= debug (event) %>

  <%= event.name %>
  <%= event.description %>
  <br>

  <%#= link_to 'Show', :controller => 'events', :action => 'show', :id => event %>
  <%= button_to 'Show', event_path(event), method: :get %>
  <%#= link_to 'Edit', :controller => 'events', :action => 'edit', :id => event %>
  <%= link_to 'Edit', edit_event_url(event) %>
  <%#= link_to 'Delete', :controller => 'events', :action => 'destroy', :id => event %>
  <%= button_to 'Delete', event_path(event), :data => {:confirm => "r u sure?"}, :method => :delete %>
  <br>
  <%= button_to 'attendees 參加者', event_attendees_path(event), method: :get %>
  </li>
  <% end %>


</ul>

<%#= link_to 'New Event', :controller => 'events', :action => 'new' %>
<%= link_to 'New Event', new_event_path %>